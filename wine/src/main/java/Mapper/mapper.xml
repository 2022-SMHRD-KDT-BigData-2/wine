<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Model.MemberDAO">
 	
	<insert id = "JoinService" parameterType="Model.MemberVO">
		insert into msg_member values(#{id}, #{pw}, #{birth}, #{gender})
	</insert>

	<select id = "loginService" parameterType="Model.MemberVO" resultType="Model.MemberVO">
		select * from member where id = #{id} and pw = #{pw}
	</select>
	
	<update id = "MypageService" parameterType="Model.MemberVO" >
		update msg_member set tel=#{tel}, address= #{address} where email = #{email}
	</update>
	

</mapper>